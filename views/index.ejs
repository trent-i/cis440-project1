    <div class="centerPage">

        <div class="loginPage">
            <h1>Welcome to WatchDogs</h1>
            <h2>Login</h2>

            <!-- <div id="login-error-msg-holder">
                <p id="login-error-msg">Invalid username and/or password</p>
            </div> -->

            <form id="login" method="POST" action="/login">

                <!--Username container-->
                <label>Username: </label>
                <input type="text" name="username" id="username" value="<%= locals.username %>" required>

                <!--Password container-->
                <label>Password: </label>
                <input type="password" name="password" id="password" value="<%= locals.password %>" required><br><br>

                <!--Login button-->
                <input type="submit" name="log" id="log" value="Login">
                <a href="/create_account">Create Account</a><br><br>

            </form>
        </div>
    </div>

    </div>

